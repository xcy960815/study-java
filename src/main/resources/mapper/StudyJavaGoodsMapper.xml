<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StudyJavaGoodsMapper">

    <resultMap id="BaseResultMap" type="com.example.domain.dao.StudyJavaGoodsDao">
            <id property="categoryId" column="category_id" jdbcType="BIGINT"/>
            <result property="categoryLevel" column="category_level" jdbcType="TINYINT"/>
            <result property="parentId" column="parent_id" jdbcType="BIGINT"/>
            <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
            <result property="categoryRank" column="category_rank" jdbcType="INTEGER"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="createUser" column="create_user" jdbcType="INTEGER"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="updateUser" column="update_user" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        category_id,category_level,parent_id,
        category_name,category_rank,is_deleted,
        create_time,create_user,update_time,
        update_user
    </sql>

    <select id="getGoodsList" resultMap="BaseResultMap"
            parameterType="com.example.domain.dao.StudyJavaGoodsDao">
        SELECT
        <include refid="Base_Column_List"/>
        FROM study_java_goods
            WHERE is_deleted = 0
              <if test="studyJavaGoodsDao != null ">
                  <if test="studyJavaGoodsDao.categoryName != null and studyJavaGoodsDao.categoryName != ''">
                      AND category_name LIKE CONCAT('%', #{studyJavaGoodsDao.categoryName}, '%')
                  </if>
                  <if test="studyJavaGoodsDao.categoryLevel != null and studyJavaGoodsDao.categoryLevel != 0">
                      AND category_level = #{studyJavaGoodsDao.categoryLevel}
                  </if>
                  <if test="studyJavaGoodsDao.parentId != null and studyJavaGoodsDao.parentId != 0">
                      AND parent_id = #{studyJavaGoodsDao.parentId}
                  </if>
                  <if test="studyJavaGoodsDao.categoryRank != null and studyJavaGoodsDao.categoryRank != 0">
                      AND category_rank = #{studyJavaGoodsDao.categoryRank}
                  </if>
              </if>
            ORDER BY category_rank desc
    </select>
</mapper>
