<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StudyJavaWrongQuestionMapper">
    
    <resultMap id="BaseResultMap" type="com.example.domain.vo.StudyJavaWrongQuestionVo">
        <id column="id" property="id"/>
        <result column="question_id" property="questionId"/>
        <result column="wrong_answer" property="wrongAnswer"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, question_id, wrong_answer, create_time, update_time
    </sql>

    <select id="findById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM study_java_wrong_question
        WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM study_java_wrong_question
    </select>

    <insert id="insert">
        INSERT INTO study_java_wrong_question (
            id, question_id, wrong_answer, create_time, update_time
        ) VALUES (
            #{id}, #{questionId}, #{wrongAnswer}, #{createTime}, #{updateTime}
        )
    </insert>

    <update id="update">
        UPDATE study_java_wrong_question
        SET question_id = #{questionId},
            wrong_answer = #{wrongAnswer},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM study_java_wrong_question WHERE id = #{id}
    </delete>

</mapper> 