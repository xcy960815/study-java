<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StudyJavaQuestionMapper">
    
    <resultMap id="BaseResultMap" type="com.example.domain.vo.StudyJavaQuestionVo">
        <id column="id" property="id"/>
        <result column="left_number" property="left"/>
        <result column="operator" property="operator"/>
        <result column="right_number" property="right"/>
        <result column="answer" property="answer"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, left_number, operator, right_number, answer, create_time, update_time
    </sql>

    <select id="findById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM study_java_question
        WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM study_java_question
    </select>

    <insert id="insert">
        INSERT INTO study_java_question (
            id, left_number, operator, right_number, answer, create_time, update_time
        ) VALUES (
            #{id}, #{left}, #{operator}, #{right}, #{answer}, #{createTime}, #{updateTime}
        )
    </insert>

    <update id="update">
        UPDATE study_java_question
        SET left_number = #{left},
            operator = #{operator},
            right_number = #{right},
            answer = #{answer},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM study_java_question WHERE id = #{id}
    </delete>

    <select id="generateQuestions" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM study_java_question
        WHERE level = #{level}
        ORDER BY RAND()
        LIMIT 5
    </select>

</mapper> 