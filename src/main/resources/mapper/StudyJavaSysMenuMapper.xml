<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StudyJavaSysMenuMapper">

    <resultMap id="BaseResultMap" type="com.example.domain.dao.StudyJavaSysMenuDao">
            <id property="menuId" column="menu_id" jdbcType="BIGINT"/>
            <result property="parentId" column="parent_id" jdbcType="BIGINT"/>
            <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
            <result property="path" column="path" jdbcType="VARCHAR"/>
            <result property="component" column="component" jdbcType="VARCHAR"/>
            <result property="icon" column="icon" jdbcType="VARCHAR"/>
            <result property="menuType" column="menu_type" jdbcType="TINYINT"/>
            <result property="perms" column="perms" jdbcType="VARCHAR"/>
            <result property="orderNum" column="order_num" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        menu_id,parent_id,menu_name,
        path,component,icon,
        menu_type,perms,order_num,
        create_time,update_time,is_deleted
    </sql>

    <select id="list" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM
        study_java_sys_menu
        <where>
            (is_deleted = 0 OR is_deleted IS NULL)
            <if test="studyJavaSysMenuVo != null">
                <if test="studyJavaSysMenuVo.menuName != null and studyJavaSysMenuVo.menuName != ''">
                    AND menu_name LIKE CONCAT('%', #{studyJavaSysMenuVo.menuName}, '%')
                </if>
                <if test="studyJavaSysMenuVo.menuType != null">
                    AND menu_type = #{studyJavaSysMenuVo.menuType}
                </if>
                <if test="studyJavaSysMenuVo.parentId != null">
                    AND parent_id = #{studyJavaSysMenuVo.parentId}
                </if>
                <if test="studyJavaSysMenuVo.perms != null and studyJavaSysMenuVo.perms != ''">
                    AND perms LIKE CONCAT('%', #{studyJavaSysMenuVo.perms}, '%')
                </if>
            </if>
        </where>
        ORDER BY order_num ASC
    </select>

    <select id="getDetail" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM
        study_java_sys_menu
        WHERE menu_id = #{id}
        AND (is_deleted = 0 OR is_deleted IS NULL)
    </select>

    <insert id="addMenu" parameterType="com.example.domain.dao.StudyJavaSysMenuDao">
        INSERT INTO study_java_sys_menu
        (parent_id, menu_name, path, component, icon, menu_type, perms, order_num, create_time, update_time, is_deleted)
        VALUES
        (#{menu.parentId}, #{menu.menuName}, #{menu.path}, #{menu.component}, #{menu.icon}, 
        #{menu.menuType}, #{menu.perms}, #{menu.orderNum}, #{menu.createTime}, #{menu.updateTime}, #{menu.isDeleted})
    </insert>

    <update id="updateMenu" parameterType="com.example.domain.dao.StudyJavaSysMenuDao">
        UPDATE study_java_sys_menu
        <set>
            <if test="menu.menuName != null and menu.menuName != ''">
                menu_name = #{menu.menuName},
            </if>
            <if test="menu.parentId != null">
                parent_id = #{menu.parentId},
            </if>
            <if test="menu.path != null">
                path = #{menu.path},
            </if>
            <if test="menu.component != null">
                component = #{menu.component},
            </if>
            <if test="menu.icon != null">
                icon = #{menu.icon},
            </if>
            <if test="menu.menuType != null">
                menu_type = #{menu.menuType},
            </if>
            <if test="menu.perms != null">
                perms = #{menu.perms},
            </if>
            <if test="menu.orderNum != null">
                order_num = #{menu.orderNum},
            </if>
            update_time = #{menu.updateTime}
        </set>
        WHERE menu_id = #{menu.menuId}
    </update>

    <update id="deleteMenu" parameterType="com.example.domain.dao.StudyJavaSysMenuDao">
        UPDATE study_java_sys_menu
        SET is_deleted = #{menu.isDeleted},
            update_time = #{menu.updateTime}
        WHERE menu_id = #{menu.menuId}
    </update>
</mapper>
